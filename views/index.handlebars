<div class="container">

<div class="jumbotron">

  <div class="row">
      <div class="col-md-8">
            <h2>Make a post!</h2>
              <form class="create-form">

                <div class="form-group">
                  <label for="newUser">Display Name: </label>
                  <input class="form-control" type="text" id="newUser" name="username">
                </div>
                <div class="form-group">
                  <label for="newPost">Comment: </label>
                  {{!-- <input class="form-control" type="text" id="newPost" name="user_post" rows="4"> --}}
                  <textarea class="form-control" id="newPost" name="user_post" rows="3"></textarea>
                </div>

                <button class="btn btn-primary" type="submit">Post</button>
              </form>
            <br>
      </div>
  </div>

</div>

  <div class="row">
      <div class="col-md-8">
          {{#each posts}}
              <div class="card">
                <div class="card-header">
                  <b>{{username}}</b>
                </div>
                  <div class="card-body">
                      {{!-- <h5 class="card-title">{{username}}</h5> --}}
                      <p class="card-text">{{user_post}}</p>
                  </div>
              </div>
              <br>
          {{/each}}    
      </div>
  </div>
</div>