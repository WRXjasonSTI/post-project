  <a class="navbar-brand" href="/">THE STOP USING NOTES APP APP</a>
  <span class="navbar-text">
      <a class="navbar-brand" href="/logout">Logout</a>
    </span>
</nav>
<br>
<div class="container">

  <div class="jumbotron">

    <div class="row">
      <div class="col-md-8">
        <h2>Save something good!</h2>
        <form class="create-form make-post" action="/api/posts" method="POST">
          <div class="form-group">
            <label for="postTitle">Title</label>
            <input class="form-control" type="text" id="postTitle" name="post_title">
          </div>
          <div class="form-group">
            <label for="postContent">Link (if you have one)</label>
            <input class="form-control" type="text" id="postContent" name="post_content">
          </div>
          <div class="form-group">
            <label for="postComment">Comment: </label>
            <textarea class="form-control" id="postComment" name="post_comment" rows="3"></textarea>
          </div>
          <button class="btn btn-primary" type="submit">Post</button>
        </form>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      {{#each posts}}
      <form method="post" action="/api/posts/{{id}}/delete">
      <div class="card">
        <div class="card-body">
          <p class="card-text"><h3><b>{{post_title}}</a></b></h3></p>
        </div>
        <div class="card-body">
          <p class="card-text"><a href="{{post_content}}" target="_blank">Link to content</a></p>
        </div>
        <div class="card-body">
          <p class="card-text"><b>Comment: </b> {{post_comment}}</p>
        </div>
        <button class="btn btn-warning" type="submit">Delete</button>
      </div>

      </form>
      <br>
      {{/each}}
    </div>
  </div>
</div>