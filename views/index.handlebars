<div class="container">

  <div class="jumbotron">

    <div class="row">
      <div class="col-md-8">
        <h2>Make a post!</h2>
        <form class="create-form make-post" action="/api/posts" method="POST">
          {{!-- username --}}
          <div class="form-group">
            <label for="newUser">Display Name: </label>
            <input class="form-control" type="text" id="newUser" name="username">
          </div>
          {{!-- song title --}}
          <div class="form-group">
            <label for="newSong">Song Title: </label>
            <input class="form-control" type="text" id="newSong" name="song_title">
          </div>
          {{!-- song title --}}
          <div class="form-group">
            <label for="newArtist">Artist: </label>
            <input class="form-control" type="text" id="newArtist" name="song_artist">
          </div>
          {{!-- instrument of interest --}}
          <div class="form-group">
            <label for="userPlays">What is the interesting instrument in this song?</label>
            <select class="form-control" id="userPlays" name="user_inst">
              <option>Vocals</option>
              <option>Guitar</option>
              <option>Bass</option>
              <option>Drums</option>
              <option>Other</option>
            </select>
          </div>
          {{!-- user comment --}}
          <div class="form-group">
            <label for="newPost">Comment: </label>
            <textarea class="form-control" id="newPost" name="user_post" rows="3"></textarea>
          </div>
          {{!-- post button --}}
          <button class="btn btn-primary" type="submit">Post</button>
        </form>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-md-8">
      {{#each posts}}
      <div class="card">
        <div class="card-header">
          <b>{{username}}</b>
        </div>
        <div class="card-body">
          <p class="card-text"><b>Title: </b>{{song_title}}</p>
        </div>
        <div class="card-body">
          <p class="card-text"><b>Arist: </b> {{song_artist}}</p>
        </div>
        <div class="card-body">
          <p class="card-text"><b>Instrument of interest: </b> {{user_inst}}</p>
        </div>
        <div class="card-body">
          <p class="card-text"><b>Comment: </b> {{user_post}}</p>
        </div>
      </div>
      <br>
      {{/each}}
    </div>
  </div>
</div>